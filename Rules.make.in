MAJOR_VERSION = 0
MINOR_VERSION = 3
MICRO_VERSION = 0beta1
MING_VER = $(MAJOR_VERSION).$(MINOR_VERSION).$(MICRO_VERSION)

OS             = $(shell uname -s)

CC             = gcc
CXX	       = g++

INCLUDES       += -I. 
LDLIBS         = $(LIBS)

STATICLIB      = libming.a
SHAREDLIB      = libming.so.$(MING_VER)

CFLAGS  += -g -Wall $(INCLUDES) 

SHLIBLDFLAGS   = -static

# Uncomment the following lines to compile for Darwin
#override CFLAGS         += -fno-common
#SHLIBLDFLAGS            = -dynamiclib
#SHAREDLIB                       = libming.$(MING_VER).dylib

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
includedir = @includedir@
mandir = @mandir@

